<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:background="@color/background"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product ID Section -->
        <TextView
            android:id="@+id/tvProductId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product ID:"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtProductId"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_corners"
            android:hint="Enter Product ID"
            android:paddingHorizontal="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hints"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Product Name Section -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name:"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtProductName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_corners"
            android:hint="Enter Product Name"
            android:paddingHorizontal="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hints"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Category Section -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCategory"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_corners"
            android:hint="Enter Category"
            android:paddingHorizontal="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hints"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Storage Quantity Section -->
        <TextView
            android:id="@+id/tvStorageQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storage Quantity:"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtStorageQty"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_corners"
            android:hint="Enter Storage Quantity"
            android:paddingHorizontal="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hints"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <!-- Selling Quantity Section -->
        <TextView
            android:id="@+id/tvSellingQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selling Quantity:"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtSellingQty"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_corners"
            android:hint="Enter Selling Quantity"
            android:paddingHorizontal="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hints"
            android:textSize="16sp"
            android:layout_marginBottom="25dp"
            android:inputType="number" />

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Cancel Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvCancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFA6A6">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- Confirm Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvConfirm"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#AEFFA7">

                <TextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Confirm"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
